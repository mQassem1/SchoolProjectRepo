@model Course

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <h2 id="headerText" class="mt-2">Course Details:</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-active">
                        <tr class="w-25 table-info">
                            <th>
                                Property:
                            </th>
                            <th class="w-75">
                                Details:
                            </th>
                        </tr>
                    </thead>
                    <tbody class="border">
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.CourseId)</td>
                            <td>@Model.CourseId</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Name)</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Code)</td>
                            <td>@Model.Code</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Hours)</td>
                            <td>@Model.Hours</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.LevelId)</td>
                            <td>@Model.Level.LevelName</td>
                        </tr>
                    </tbody>

                </table>

            </div>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-success">Edit</a> 
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>

    </div>

