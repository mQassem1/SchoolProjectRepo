@model IEnumerable<Level>

@{
    ViewBag.Title = "Levels List";
 
}
<div class="container">
    <h2 id="headerText" class="mt-3">Levels List:</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-info text-center">
                    <tr class="">
                        <th class="w-25">
                            @Html.DisplayNameFor(model => model.LevelName)
                        </th>
                        <th class="w-75"></th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LevelName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.LevelId" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.LevelId" class="btn btn-secondary">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.LevelId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>

