@model StudentSearchViewModel
@{ 
    ViewBag.Title = "Search Students";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-action="Search" asp-controller="Students">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="StudentId" class="control-label"></label>
                        <input asp-for="StudentId" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Department" class="control-label"></label>
                        <input asp-for="Department" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>