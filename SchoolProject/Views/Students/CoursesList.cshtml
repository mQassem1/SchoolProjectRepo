@model List<StudentCourse>

@{
    ViewBag.Title = "Course Details";
}


@if (Model.Any())
{
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="table-responsive-md">
                    <table class="table table-bordered table-hover table-primary">
                        <thead class="table-active">
                            <tr>
                                <th>
                                    Course Id
                                </th>
                                <th>
                                    Course Name
                                </th>
                                <th>
                                    Course Code
                                </th>
                                <th>
                                    Course GPA
                                </th>
                                <th>
                                    Course Hours
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.CourseId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseGPA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseHours)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-12">

                <div class="table-responsive-md">

                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Course Id
                                </th>
                                <th>
                                    Course Name
                                </th>
                                <th>
                                    Course Code
                                </th>
                                <th>
                                    Course GPA
                                </th>
                                <th>
                                    Course Hours
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center mt-5">No Courses To View</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

